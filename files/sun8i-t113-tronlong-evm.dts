/dts-v1/;

#include "sun8i-t113s.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/leds/common.h>

/ {
	model = "Tronlong TLT113-EVM";
	compatible = "tronlong,tlt113-evm", "allwinner,sun8i-t113s", "allwinner,sun8i";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
		ethernet1 = &usbether; /* 对应板载 USB 网卡 SR9900 */
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
		compatible = "gpio-leds";

		/* 原理图 Page 6: LED1 (Green) 由 Q5 驱动，连接到 PG11 */
		/* 注意：这是底板上的 LED，不是核心板上的 */
		led-0 {
			function = LED_FUNCTION_STATUS;
			color = <LED_COLOR_ID_GREEN>;
			label = "tlt113:green:status";
			gpios = <&pio 6 11 GPIO_ACTIVE_HIGH>; /* PG11 */
			linux,default-trigger = "heartbeat";
		};
	};
    
	/* 内存优化：禁用显示引擎以释放 CMA 内存 */
	display_engine: display-engine { status = "disabled"; };
};

/* --- 引脚定义 (Pinmux) --- */
&pio {
    /* 原理图 Page 5: UART0 使用 PG17(TX), PG18(RX) */
    uart0_pg_pins: uart0-pg-pins {
        pins = "PG17", "PG18";
        function = "uart0";
    };

    /* 原理图 Page 13: RGMII 数据引脚 */
    /* 注意：排除 PG11(LED) 和 PG13(Reset GPIO) */
    emac_rgmii_pins: emac-rgmii-pins {
        pins = "PG0", "PG1", "PG2", "PG3", "PG4", "PG5", "PG6",
               "PG7", "PG8", "PG9", "PG10", "PG12",
               "PG14", "PG15";
        function = "emac";
        drive-strength = <40>; /* 增强驱动能力，提高网络稳定性 */
    };
    
    /* 原理图 Page 7: SD卡检测引脚 PF6 */
    mmc0_cd_pin: mmc0-cd-pin {
        pins = "PF6";
        function = "gpio_in";
        bias-pull-up;
    };
};

/* --- 串口配置 --- */
&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pg_pins>;
	status = "okay";
};

/* --- SD 卡配置 (MMC0) --- */
/* 原理图 Page 7: PF0-PF5 数据/时钟，PF6 检测 */
&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins>;
	vmmc-supply = <&reg_dcdc1>;
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; /* PF6, Low有效 */
	status = "okay";
};

/* --- eMMC 配置 (MMC2) --- */
/* 核心板自带，与 SPI0 复用，默认开启 eMMC */
&mmc2 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc2_4bit_pins>;
	vmmc-supply = <&reg_dcdc1>;
	bus-width = <4>;
	non-removable;
	cap-mmc-hw-reset;
	status = "okay";
};

/* --- 以太网配置 (ETH0 - RGMII) --- */
/* 原理图 Page 13: YT8521SH-CA */
&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_rgmii_pins>;
	phy-mode = "rgmii-id"; /* 启用 PHY 内部时钟延迟 */
	phy-handle = <&ext_rgmii_phy>;
	phy-supply = <&reg_dcdc1>; 
	status = "okay";

	mdio {
		compatible = "snps,dwmac-mdio";
		#address-cells = <1>;
		#size-cells = <0>;

		ext_rgmii_phy: ethernet-phy@0 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <0>; /* PHY 地址 0 */
            
            /* 复位引脚: PG13 (原理图 Page 13 U15) */
            reset-gpios = <&pio 6 13 GPIO_ACTIVE_LOW>;
            reset-assert-us = <10000>;
            reset-deassert-us = <150000>;

            /* 裕太微 PHY 专用配置 */
			motorcomm,clk-out-frequency-hz = <125000000>;
            motorcomm,keep-pll-enabled;
            motorcomm,auto-sleep-disabled;
		};
	};
};

/* --- USB 配置 --- */
/* USB0: Type-C OTG (原理图 Page 5) */
&usb_otg {
	dr_mode = "host"; /* 默认做主机，可接鼠标/U盘 */
	status = "okay";
};

/* USB1: 连接板载 HUB (CH334H - 原理图 Page 16) */
/* SR9900 (ETH1) 和 USB Port A 都挂在这个控制器下 */
&ehci1 { status = "okay"; };
&ohci1 { status = "okay"; };

&usbphy { status = "okay"; };

/* 禁用不需要的模块 */
&ehci0 { status = "okay"; };
&ohci0 { status = "okay"; };
&tcon_tv0 { status = "disabled"; };
&tcon_lcd0 { status = "disabled"; };
