# ============================================================
# 1. 目标平台 (Target System)
# ============================================================
CONFIG_TARGET_sunxi=y
CONFIG_TARGET_sunxi_cortexa7=y

# ❌ 删除 MangoPi 的配置
# CONFIG_TARGET_sunxi_cortexa7_DEVICE_mangopi_mq-r is not set

# ✅ 关键：选中我们在 diy-part2.sh 里定义的新机型
CONFIG_TARGET_sunxi_cortexa7_DEVICE_tronlong_tlt113-minievm=y

# ============================================================
# 2. 原生以太网驱动 (Native Ethernet)
# ============================================================
CONFIG_PACKAGE_kmod-dwmac-sun8i=y
CONFIG_PACKAGE_kmod-motorcomm=y

# ============================================================
# 3. 显示驱动 (HDMI Out)
# ============================================================
CONFIG_PACKAGE_kmod-drm=y
CONFIG_PACKAGE_kmod-drm-sun4i=y
CONFIG_PACKAGE_kmod-drm-bridge-lontium-lt8912b=y
CONFIG_PACKAGE_kmod-i2c-mv64xxx=y

# Framebuffer 支持 (让 HDMI 显示启动日志)
CONFIG_PACKAGE_kmod-fb=y
CONFIG_PACKAGE_kmod-fb-cfb-copyarea=y
CONFIG_PACKAGE_kmod-fb-cfb-fillrect=y
CONFIG_PACKAGE_kmod-fb-cfb-imgblt=y

# ============================================================
# 4. USB WiFi (MT7601U)
# ============================================================
CONFIG_PACKAGE_kmod-mt7601u=y
CONFIG_PACKAGE_hostapd-common=y
CONFIG_PACKAGE_wpad-basic-wolfssl=y

# ============================================================
# 5. 辅助工具 (文件系统 & 磁盘管理)
# ============================================================
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_resize2fs=y
