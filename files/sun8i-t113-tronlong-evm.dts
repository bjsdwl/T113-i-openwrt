/dts-v1/;

#include "sun8i-t113s.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/leds/common.h>

/ {
	model = "Tronlong SOM-TLT113-EVM";
	compatible = "tronlong,tlt113-evm", "allwinner,sun8i-t113s", "allwinner,sun8i";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
		ethernet1 = &usbether;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	leds {
		compatible = "gpio-leds";
		led-0 {
			function = LED_FUNCTION_STATUS;
			color = <LED_COLOR_ID_GREEN>;
			label = "tlt113:green:user1";
			gpios = <&pio 2 0 GPIO_ACTIVE_HIGH>; /* PC0 */
			linux,default-trigger = "heartbeat";
		};
	};
    
    /* 禁用显示引擎以释放 CMA 内存 */
	display_engine: display-engine { status = "disabled"; };
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pg_pins>;
	status = "okay";
};

&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins>;
	vmmc-supply = <&reg_dcdc1>;
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; /* PF6 */
	status = "okay";
};

&mmc2 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc2_4bit_pins>;
	vmmc-supply = <&reg_dcdc1>;
	bus-width = <4>;
	non-removable;
	cap-mmc-hw-reset;
	status = "okay";
};

&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_rgmii_pins>;
	phy-mode = "rgmii-id";
	phy-handle = <&ext_rgmii_phy>;
	status = "okay";

	mdio {
		compatible = "snps,dwmac-mdio";
		#address-cells = <1>;
		#size-cells = <0>;

		ext_rgmii_phy: ethernet-phy@0 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <0>;
			motorcomm,clk-out-frequency-hz = <125000000>;
		};
	};
};

&usb_otg {
	dr_mode = "host";
	status = "okay";
};

&usbphy { status = "okay"; };
&ehci0 { status = "okay"; };
&ohci0 { status = "okay"; };
&ehci1 { status = "okay"; };
&ohci1 { status = "okay"; };
&tcon_tv0 { status = "disabled"; };
&tcon_lcd0 { status = "disabled"; };
