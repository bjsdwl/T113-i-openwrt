/dts-v1/;

#include "sun8i-t113s.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/leds/common.h>

/ {
	model = "Tronlong TLT113-MiniEVM (NAND/RGMII)";
	compatible = "tronlong,tlt113-minievm", "allwinner,sun8i-t113s", "allwinner,sun8i";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac; /* 千兆 RGMII */
		ethernet1 = &usbether;
		spi0 = &spi0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	/* 板载 USB VBUS 电源 (MiniEVM 特有: PB12) */
	reg_usb1_vbus: usb1-vbus {
		compatible = "regulator-fixed";
		regulator-name = "usb1-vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		regulator-enable-ramp-delay = <1000>;
		gpio = <&pio 1 12 GPIO_ACTIVE_HIGH>; /* PB12 */
		enable-active-high;
		regulator-always-on;
	};

	leds {
		compatible = "gpio-leds";
		/* 核心板 LED (PC0) */
		led-0 {
			function = LED_FUNCTION_STATUS;
			color = <LED_COLOR_ID_GREEN>;
			label = "tlt113:green:status";
			gpios = <&pio 2 0 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
		};
	};
    
	/* 禁用显示引擎 */
	display_engine: display-engine { status = "disabled"; };
};

&pio {
	/* UART0 引脚 (PG17/18) */
	uart0_pg_pins: uart0-pg-pins {
		pins = "PG17", "PG18";
		function = "uart0";
	};

	/* RGMII 千兆网口引脚 (PG组) - 对应原理图 */
	emac_rgmii_pins: emac-rgmii-pins {
		pins = "PG0", "PG1", "PG2", "PG3", "PG4", "PG5", "PG6",
		       "PG7", "PG8", "PG9", "PG10", "PG12",
		       "PG14", "PG15";
		function = "emac";
		drive-strength = <40>;
	};
    
	/* SPI0 (NAND) 引脚 */
	spi0_pins: spi0-pins {
		pins = "PC2", "PC4", "PC5", "PC6", "PC7"; 
		function = "spi0";
	};
	spi0_cs0_pin: spi0-cs0-pin {
		pins = "PC3";
		function = "spi0";
	};
	
	/* SD卡检测脚 (PF6) */
	mmc0_cd_pin: mmc0-cd-pin {
		pins = "PF6";
		function = "gpio_in";
		bias-pull-up;
	};
};

/* --- 调试串口 --- */
&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pg_pins>;
	status = "okay";
};

/* --- SD卡 --- */
&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins>;
	vmmc-supply = <&reg_dcdc1>;
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>;
	status = "okay";
};

/* --- 禁用 eMMC (启用 SPI0) --- */
&mmc2 { status = "disabled"; };

/* --- SPI NAND Flash --- */
&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins>, <&spi0_cs0_pin>;
	status = "okay";

	flash@0 {
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <40000000>;
		
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x200000>;
				read-only;
			};
			partition@200000 {
				label = "ubi";
				reg = <0x200000 0xfe00000>;
			};
		};
	};
};

/* --- 以太网 (RGMII 1000M - YT8521SH) --- */
/* 依据: 原理图 Address 0, Reset PG13 */
&emac {
	pinctrl-names = "default";
	pinctrl-0 = <&emac_rgmii_pins>;
	phy-mode = "rgmii-id"; 
	phy-handle = <&ext_rgmii_phy>;
	status = "okay";

	mdio {
		compatible = "snps,dwmac-mdio";
		#address-cells = <1>;
		#size-cells = <0>;

		ext_rgmii_phy: ethernet-phy@0 {
			compatible = "ethernet-phy-ieee802.3-c22";
			reg = <0>; /* 原理图明确标注 Address: 00000 */
            
            /* 复位配置: PG13 */
            reset-gpios = <&pio 6 13 GPIO_ACTIVE_LOW>;
            reset-assert-us = <10000>;
            reset-deassert-us = <150000>;

            /* 裕太微 YT8521 必须开启时钟输出 */
			motorcomm,clk-out-frequency-hz = <125000000>;
            motorcomm,keep-pll-enabled;
            motorcomm,auto-sleep-disabled;
		};
	};
};

/* --- USB --- */
&usb_otg {
	dr_mode = "host";
	status = "okay";
};

&usbphy { 
	usb1_vbus-supply = <&reg_usb1_vbus>;
	status = "okay"; 
};

&ehci1 { status = "okay"; };
&ohci1 { status = "okay"; };

/* 禁用不需要的模块 */
&ehci0 { status = "okay"; };
&ohci0 { status = "okay"; };
&tcon_tv0 { status = "disabled"; };
&tcon_lcd0 { status = "disabled"; };
